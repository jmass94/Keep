<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jalenmassey.keep"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NotesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteDetail"
            android:label="@string/title_activity_note_detail"
            android:parentActivityName=".NotesActivity"
            android:theme="@style/NoteTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jalenmassey.keep.NotesActivity"
                />
        </activity>
    </application>

</manifest>
